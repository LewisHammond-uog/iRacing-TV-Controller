<Window x:Class="iRacingTVController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iRacingTVController"
        mc:Ignorable="d"
        Title="iRacing-TV Controller"
        WindowStartupLocation="CenterScreen"
        Closed="Window_Closed" ResizeMode="CanMinimize" Width="860" Height="430">
    <Grid>
        <TabControl>
            <TabItem Header="Control Panel" Padding="12,6,12,6">
                <Grid Margin="6,6,6,6">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Target car index" Width="200"/>
                            <TextBox x:Name="ControlPanel_TargetCamCarIdx" Width="100"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <Label Content="Target camera group number" Width="200"/>
                            <TextBox x:Name="ControlPanel_TargetCamGroupNumber" Width="100"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <Label Content="Target reason" Width="200"/>
                            <TextBox x:Name="ControlPanel_TargetCamReason" Width="500"/>
                        </StackPanel>
                        <Button x:Name="ControlPanel_EnableDirector_Button" Content="Enable Director" Click="ControlPanel_EnableDirector_Click" Margin="0,6,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Incidents" Padding="12,6,12,6">
                <Grid Margin="6,6,6,6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <DockPanel>
                        <ListView x:Name="Incidents_ListView" MouseDoubleClick="Incidents_ListView_MouseDoubleClick">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="#" Width="50">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Label Content="{Binding Index}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Frame" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Label Content="{Binding FrameNumber}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Car Number" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Label Content="{Binding CarNumber}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Driver Name" Width="240">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Label Content="{Binding DriverName}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Start" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <local:Number Value="{Binding StartFrame}" Height="25.96" Padding="3,0,3,0" VerticalContentAlignment="Center" ValueChanged="Incidents_StartFrame_ValueChanged"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="End" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <local:Number Value="{Binding EndFrame}" Height="25.96" Padding="3,0,3,0" VerticalContentAlignment="Center" ValueChanged="Incidents_EndFrame_ValueChanged"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Ignore" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding Ignore}" Click="Incidents_Ignore_Click"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                            <ListView.Resources>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                                <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </ListView.Resources>
                        </ListView>
                    </DockPanel>
                    <Button Content="Scan Now" Grid.Row="1" Margin="0,6,0,0" Click="Incidents_ScanNow_Button_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Director" Padding="12,6,12,6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Margin="6,6,6,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label Content="Director File" />
                        <ComboBox x:Name="DirectorList" Grid.Column="1" VerticalContentAlignment="Center" SelectionChanged="Director_DirectorList_SelectionChanged" />
                        <Button x:Name="DirectorFile_Rename" Content="Rename" Grid.Column="2" Margin="2,0,0,0" Padding="6,0,6,0" Click="Director_DirectorFile_Rename_Click" />
                        <Button x:Name="DirectorFile_Create" Content="Create" Grid.Column="3" Margin="2,0,0,0" Padding="6,0,6,0" Click="Director_DirectorFile_Create_Click" />
                        <Button x:Name="DirectorFile_Delete" Content="Delete" Grid.Column="4" Margin="2,0,0,0" Padding="6,0,6,0" Click="Director_DirectorFile_Delete_Click" />
                    </Grid>
                    <Grid Grid.Row="1">
                        <TabControl TabStripPlacement="Left">
                            <TabItem Header="Cameras" Padding="12,6,12,6">
                                <StackPanel Margin="6,6,6,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Practice"/>
                                        <TextBox x:Name="Director_Cameras_Practice" Height="25.96" Padding="3,0,3,0" VerticalContentAlignment="Center" TextChanged="Editor_Update" Grid.Column="1"/>
                                        <Button Padding="6,0,6,0" Content="🎥" Margin="-1,0,0,0" Click="Director_Cameras_Practice_Button_Click" Grid.Column="2"/>
                                        <CheckBox x:Name="Director_Cameras_Practice_Override" VerticalAlignment="Center" Content="Override" Click="Director_Update" Grid.Column="3" HorizontalAlignment="Right" Margin="6,0,0,0" />
                                    </Grid>
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Qualifying"/>
                                        <TextBox x:Name="Director_Cameras_Qualifying" Height="25.96" Padding="3,0,3,0" VerticalContentAlignment="Center" TextChanged="Editor_Update" Grid.Column="1"/>
                                        <Button Padding="6,0,6,0" Content="🎥" Margin="-1,0,0,0" Click="Director_Cameras_Qualifying_Button_Click" Grid.Column="2"/>
                                        <CheckBox x:Name="Director_Cameras_Qualifying_Override" VerticalAlignment="Center" Content="Override" Click="Director_Update" Grid.Column="3" HorizontalAlignment="Right" Margin="6,0,0,0" />
                                    </Grid>
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Intro"/>
                                        <TextBox x:Name="Director_Cameras_Intro" Height="25.96" Padding="3,0,3,0" VerticalContentAlignment="Center" TextChanged="Editor_Update" Grid.Column="1"/>
                                        <Button Padding="6,0,6,0" Content="🎥" Margin="-1,0,0,0" Click="Director_Cameras_Intro_Button_Click" Grid.Column="2"/>
                                        <CheckBox x:Name="Director_Cameras_Intro_Override" VerticalAlignment="Center" Content="Override" Click="Director_Update" Grid.Column="3" HorizontalAlignment="Right" Margin="6,0,0,0" />
                                    </Grid>
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Inside"/>
                                        <TextBox x:Name="Director_Cameras_Inside" Height="25.96" Padding="3,0,3,0" VerticalContentAlignment="Center" TextChanged="Editor_Update" Grid.Column="1"/>
                                        <Button Padding="6,0,6,0" Content="🎥" Margin="-1,0,0,0" Click="Director_Cameras_Inside_Button_Click" Grid.Column="2"/>
                                        <CheckBox x:Name="Director_Cameras_Inside_Override" VerticalAlignment="Center" Content="Override" Click="Director_Update" Grid.Column="3" HorizontalAlignment="Right" Margin="6,0,0,0" />
                                    </Grid>
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Close"/>
                                        <TextBox x:Name="Director_Cameras_Close" Height="25.96" Padding="3,0,3,0" VerticalContentAlignment="Center" TextChanged="Editor_Update" Grid.Column="1"/>
                                        <Button Padding="6,0,6,0" Content="🎥" Margin="-1,0,0,0" Click="Director_Cameras_Close_Button_Click" Grid.Column="2"/>
                                        <CheckBox x:Name="Director_Cameras_Close_Override" VerticalAlignment="Center" Content="Override" Click="Director_Update" Grid.Column="3" HorizontalAlignment="Right" Margin="6,0,0,0" />
                                    </Grid>
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Medium"/>
                                        <TextBox x:Name="Director_Cameras_Medium" Height="25.96" Padding="3,0,3,0" VerticalContentAlignment="Center" TextChanged="Editor_Update" Grid.Column="1"/>
                                        <Button Padding="6,0,6,0" Content="🎥" Margin="-1,0,0,0" Click="Director_Cameras_Medium_Button_Click" Grid.Column="2"/>
                                        <CheckBox x:Name="Director_Cameras_Medium_Override" VerticalAlignment="Center" Content="Override" Click="Director_Update" Grid.Column="3" HorizontalAlignment="Right" Margin="6,0,0,0" />
                                    </Grid>
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Far"/>
                                        <TextBox x:Name="Director_Cameras_Far" Height="25.96" Padding="3,0,3,0" VerticalContentAlignment="Center" TextChanged="Editor_Update" Grid.Column="1"/>
                                        <Button Padding="6,0,6,0" Content="🎥" Margin="-1,0,0,0" Click="Director_Cameras_Far_Button_Click" Grid.Column="2"/>
                                        <CheckBox x:Name="Director_Cameras_Far_Override" VerticalAlignment="Center" Content="Override" Click="Director_Update" Grid.Column="3" HorizontalAlignment="Right" Margin="6,0,0,0" />
                                    </Grid>
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Very Far"/>
                                        <TextBox x:Name="Director_Cameras_VeryFar" Height="25.96" Padding="3,0,3,0" VerticalContentAlignment="Center" TextChanged="Editor_Update" Grid.Column="1"/>
                                        <Button Padding="6,0,6,0" Content="🎥" Margin="-1,0,0,0" Click="Director_Cameras_VeryFar_Button_Click" Grid.Column="2" VerticalContentAlignment="Center"/>
                                        <CheckBox x:Name="Director_Cameras_VeryFar_Override" VerticalAlignment="Center" Content="Override" Click="Director_Update" Grid.Column="3" HorizontalAlignment="Right" Margin="6,0,0,0" />
                                    </Grid>
                                </StackPanel>
                            </TabItem>
                            <TabItem Header="Switch Delay" Padding="12,6,12,6">
                                <StackPanel Margin="6,6,6,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="General"/>
                                        <local:Decimal x:Name="Director_SwitchDelay_General" ValueChanged="Director_Update" Grid.Column="1" />
                                        <CheckBox x:Name="Director_SwitchDelay_General_Override" VerticalAlignment="Center" Content="Override" Click="Director_Update" Grid.Column="2" HorizontalAlignment="Right" Margin="6,0,0,0" />
                                    </Grid>
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Radio Chatter"/>
                                        <local:Decimal x:Name="Director_SwitchDelay_RacioChatter" ValueChanged="Director_Update" Grid.Column="1" />
                                        <CheckBox x:Name="Director_SwitchDelay_RadioChatter_Override" VerticalAlignment="Center" Content="Override" Click="Director_Update" Grid.Column="2" HorizontalAlignment="Right" Margin="6,0,0,0" />
                                    </Grid>
                                </StackPanel>
                            </TabItem>
                        </TabControl>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Overlay" Padding="12,6,12,6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Margin="6,6,6,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label Content="Overlay File" />
                        <ComboBox x:Name="OverlayList" Grid.Column="1" VerticalContentAlignment="Center" SelectionChanged="Overlay_OverlayList_SelectionChanged" />
                        <Button x:Name="OverlayFile_Rename" Content="Rename" Grid.Column="2" Margin="2,0,0,0" Padding="6,0,6,0" Click="Overlay_OverlayFile_Rename_Click" />
                        <Button x:Name="OverlayFile_Create" Content="Create" Grid.Column="3" Margin="2,0,0,0" Padding="6,0,6,0" Click="Overlay_OverlayFile_Create_Click" />
                        <Button x:Name="OverlayFile_Delete" Content="Delete" Grid.Column="4" Margin="2,0,0,0" Padding="6,0,6,0" Click="Overlay_OverlayFile_Delete_Click" />
                    </Grid>
                    <Grid Grid.Row="1">
                        <TabControl TabStripPlacement="Left">
                            <TabItem Header="General" Padding="12,6,12,6">
                                <StackPanel Margin="6,6,6,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="25"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="25"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Position"/>
                                        <local:Number x:Name="Overlay_General_Position_X" ValueChanged="Overlay_General_Position_Size_Update" Grid.Column="1" />
                                        <Label Content="X" HorizontalContentAlignment="Center" Grid.Column="2" />
                                        <local:Number x:Name="Overlay_General_Position_Y" ValueChanged="Overlay_General_Position_Size_Update" Grid.Column="3" />
                                        <Label Content="Y" HorizontalContentAlignment="Center" Grid.Column="4" />
                                        <CheckBox x:Name="Overlay_General_Position_Override" VerticalAlignment="Center" Content="Override" Click="Overlay_General_Position_Size_Update" Grid.Column="5" HorizontalAlignment="Right" Margin="6,0,0,0" />
                                    </Grid>
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="25"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="25"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Size"/>
                                        <local:Number x:Name="Overlay_General_Size_W" ValueChanged="Overlay_General_Position_Size_Update" Grid.Column="1"/>
                                        <Label Content="W" HorizontalContentAlignment="Center" Grid.Column="2"/>
                                        <local:Number x:Name="Overlay_General_Size_H" ValueChanged="Overlay_General_Position_Size_Update" Grid.Column="3"/>
                                        <Label Content="H" HorizontalContentAlignment="Center" Grid.Column="4"/>
                                        <CheckBox x:Name="Overlay_General_Size_Override" VerticalAlignment="Center" Content="Override" Click="Overlay_General_Position_Size_Update" Grid.Column="5" HorizontalAlignment="Right" Margin="6,0,0,0" />
                                    </Grid>
                                </StackPanel>
                            </TabItem>
                            <TabItem Header="Fonts" Padding="12,6,12,6">
                                <StackPanel Margin="6,6,6,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Font A" Width="100"/>
                                        <ComboBox x:Name="Overlay_Font_FontA_Name" VerticalContentAlignment="Center" Height="25.96" Grid.Column="1" SelectionChanged="Overlay_Font_Update">
                                            <ComboBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel />
                                                </ItemsPanelTemplate>
                                            </ComboBox.ItemsPanel>
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" FontFamily="{Binding}" Height="25.96" FontSize="18"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <CheckBox x:Name="Overlay_Font_FontA_Name_Override" VerticalAlignment="Center" Content="Override" Click="Overlay_Font_Update" Grid.Column="2" HorizontalAlignment="Right" Margin="6,0,0,0"/>
                                    </Grid>
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Font B" Width="100"/>
                                        <ComboBox x:Name="Overlay_Font_FontB_Name" VerticalContentAlignment="Center" Height="25.96" Grid.Column="1" SelectionChanged="Overlay_Font_Update">
                                            <ComboBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel />
                                                </ItemsPanelTemplate>
                                            </ComboBox.ItemsPanel>
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" FontFamily="{Binding}" Height="25.96" FontSize="18"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <CheckBox x:Name="Overlay_Font_FontB_Name_Override" VerticalAlignment="Center" Content="Override" Click="Overlay_Font_Update" Grid.Column="2" HorizontalAlignment="Right" Margin="6,0,0,0"/>
                                    </Grid>
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Font C" Width="100"/>
                                        <ComboBox x:Name="Overlay_Font_FontC_Name" VerticalContentAlignment="Center" Height="25.96" Grid.Column="1" SelectionChanged="Overlay_Font_Update">
                                            <ComboBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel />
                                                </ItemsPanelTemplate>
                                            </ComboBox.ItemsPanel>
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" FontFamily="{Binding}" Height="25.96" FontSize="18"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <CheckBox x:Name="Overlay_Font_FontC_Name_Override" VerticalAlignment="Center" Content="Override" Click="Overlay_Font_Update" Grid.Column="2" HorizontalAlignment="Right" Margin="6,0,0,0"/>
                                    </Grid>
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Font D" Width="100"/>
                                        <ComboBox x:Name="Overlay_Font_FontD_Name" VerticalContentAlignment="Center" Height="25.96" Grid.Column="1" SelectionChanged="Overlay_Font_Update">
                                            <ComboBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel />
                                                </ItemsPanelTemplate>
                                            </ComboBox.ItemsPanel>
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" FontFamily="{Binding}" Height="25.96" FontSize="18"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <CheckBox x:Name="Overlay_Font_FontD_Name_Override" VerticalAlignment="Center" Content="Override" Click="Overlay_Font_Update" Grid.Column="2" HorizontalAlignment="Right" Margin="6,0,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </TabItem>
                            <TabItem Header="Images" Padding="12,6,12,6">
                                <StackPanel Margin="6,6,6,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Image ID"/>
                                        <ComboBox x:Name="Overlay_Image_ID" VerticalContentAlignment="Center" Height="25.96" Grid.Column="1" SelectionChanged="Overlay_Image_ID_SelectionChanged"/>
                                    </Grid>
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Image Type"/>
                                        <ComboBox x:Name="Image_ImageType" VerticalContentAlignment="Center" Height="25.96" Grid.Column="1" SelectionChanged="Overlay_Image_Update"/>
                                        <CheckBox x:Name="Image_ImageType_Override" VerticalAlignment="Center" Content="Override" Click="Overlay_Image_Update" Grid.Column="2" HorizontalAlignment="Right" Margin="6,0,0,0"/>
                                    </Grid>
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="File Name" Width="100"/>
                                        <Grid Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="Image_FilePath" Height="25.96" Padding="3,0,3,0" VerticalContentAlignment="Center" TextChanged="Overlay_Image_Update"/>
                                            <Button Padding="6,0,6,0" Content="📁" Grid.Column="1" Margin="-1,0,0,0" Click="Overlay_Image_FilePath_Button_Click" />
                                        </Grid>
                                        <CheckBox x:Name="Image_FilePath_Override" VerticalAlignment="Center" Content="Override" Click="Overlay_Image_Update" Grid.Column="2" HorizontalAlignment="Right" Margin="6,0,0,0"/>
                                    </Grid>
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="25"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="25"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Position"/>
                                        <local:Number x:Name="Image_Position_X" ValueChanged="Overlay_Image_Update" Grid.Column="1" />
                                        <Label Content="X" HorizontalContentAlignment="Center" Grid.Column="2" />
                                        <local:Number x:Name="Image_Position_Y" ValueChanged="Overlay_Image_Update" Grid.Column="3" />
                                        <Label Content="Y" HorizontalContentAlignment="Center" Grid.Column="4" />
                                        <CheckBox x:Name="Image_Position_Override" VerticalAlignment="Center" Content="Override" Click="Overlay_Image_Update" Grid.Column="5" HorizontalAlignment="Right" Margin="6,0,0,0" />
                                    </Grid>
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="25"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="25"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Size"/>
                                        <local:Number x:Name="Image_Size_W" ValueChanged="Overlay_Image_Update" Grid.Column="1" />
                                        <Label Content="W" HorizontalContentAlignment="Center" Grid.Column="2"/>
                                        <local:Number x:Name="Image_Size_H" ValueChanged="Overlay_Image_Update" Grid.Column="3" />
                                        <Label Content="H" HorizontalContentAlignment="Center" Grid.Column="4"/>
                                        <CheckBox x:Name="Image_Size_Override" VerticalAlignment="Center" Content="Override" Click="Overlay_Image_Update" Grid.Column="5" HorizontalAlignment="Right" Margin="6,0,0,0" />
                                    </Grid>
