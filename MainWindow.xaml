                                                            <local:Number Value="{Binding StartFrame}" Height="25.96" Padding="3,0,3,0" VerticalContentAlignment="Center"/>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Header="End" Width="100">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <local:Number Value="{Binding EndFrame}" Height="25.96" Padding="3,0,3,0" VerticalContentAlignment="Center"/>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Header="Ignore" Width="100">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <CheckBox IsChecked="{Binding Ignore}"/>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                        <ListView.Resources>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            </Style>
                                            <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                        </ListView.Resources>
                                    </ListView>
                                </DockPanel>
                                <Grid Grid.Row="1" Margin="0,6,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Content="Scan Now" Margin="0,0,3,0" Click="ScanNow_Button_Click"/>
                                    <Button Content="Save Incidents" Grid.Column="1" Margin="3,0,3,0"/>
                                    <Button Content="Load Incidents" Grid.Column="2" Margin="3,0,0,0"/>
                                </Grid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="iRacing" Padding="12,6,12,6">
                <Grid>
                    <TabControl TabStripPlacement="Left">
                        <TabItem Header="Custom Paints" Padding="12,6,12,6">
                            <Grid>
                                <StackPanel Margin="6,6,6,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Directory" Width="100"/>
                                        <TextBox x:Name="iRacing_CustomPaintsDirectory" Grid.Column="1" Height="25.96" Padding="3,0,3,0" VerticalContentAlignment="Center" TextChanged="iRacing_Update"/>
                                        <Button Padding="6,0,6,0" Content="📁" Grid.Column="2" Margin="-1,0,0,0" Click="iRacing_CustomPaintsDirectory_Button_Click" />
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="Editor" Padding="12,6,12,6">
                <Grid>
                    <TabControl TabStripPlacement="Left">
                        <TabItem Header="Mouse" Padding="12,6,12,6">
                            <Grid>
                                <StackPanel Margin="6,6,6,6">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Positioning" Width="100"/>
                                        <Label Content="Normal" />
                                        <local:Decimal x:Name="Editor_Mouse_Position_Normal" Width="100" ValueChanged="Editor_Mouse_Position" />
                                        <Label Content="Fast (Shift)" HorizontalContentAlignment="Center" Margin="6,0,0,0" />
                                        <local:Decimal x:Name="Editor_Mouse_Position_Fast" Width="100" ValueChanged="Editor_Mouse_Position" />
                                        <Label Content="Slow (Ctrl)" HorizontalContentAlignment="Center" Margin="6,0,0,0" />
                                        <local:Decimal x:Name="Editor_Mouse_Position_Slow" Width="100" ValueChanged="Editor_Mouse_Position" />
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
