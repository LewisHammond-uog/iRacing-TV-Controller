<Window x:Class="iRacingTVController.CameraSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iRacingTVController"
        mc:Ignorable="d"
        Title="Add Camera" Height="500" Width="200" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="6,6,6,6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ListBox x:Name="Cameras" SelectionMode="Multiple" />
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0">
                <Button x:Name="Add" Content="Add" IsDefault="True" Padding="6,0,6,0" Click="Add_Click" />
                <Button x:Name="Cancel" Content="Cancel" Margin="6,0,0,0" Padding="6,0,6,0" Click="Cancel_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
