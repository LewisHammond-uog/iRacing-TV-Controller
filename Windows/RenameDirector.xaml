<Window x:Class="iRacingTVController.RenameDirector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iRacingTVController"
        mc:Ignorable="d"
        Title="Rename Director" Width="400" SizeToContent="Height" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Icon="/Assets/icon/iracing-tv.ico">
    <Grid Margin="6,6,6,6">
        <StackPanel>
            <Label Content="Director Name" />
            <TextBox x:Name="DirectorName" Margin="0,0,0,6" Padding="6,0,6,0" Height="25.96" VerticalContentAlignment="Center" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0">
                <Button x:Name="Rename" Content="Rename" IsDefault="True" Padding="6,0,6,0" Click="Rename_Click" />
                <Button x:Name="Cancel" Content="Cancel" Margin="6,0,0,0" Padding="6,0,6,0" Click="Cancel_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
